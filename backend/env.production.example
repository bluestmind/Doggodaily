# Production Environment Configuration for DoggoDaily
# Copy this file to .env and update the values for your production environment

# Flask Configuration
FLASK_ENV=production
FLASK_CONFIG=production
FLASK_DEBUG=False

# Security Keys (CHANGE THESE!)
SECRET_KEY=your-super-secret-production-key-CHANGE-THIS-IMMEDIATELY
JWT_SECRET_KEY=your-jwt-secret-production-key-CHANGE-THIS-IMMEDIATELY

# Database Configuration
# For SQLite (development/small deployments)
DATABASE_URL=sqlite:///data/production.db

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/doggodaily_prod

# For MySQL/MariaDB
# DATABASE_URL=mysql://username:password@localhost:3306/doggodaily_prod

# Domain Configuration
FRONTEND_URL=https://www.doggodaiily.com
BASE_URL=https://www.doggodaiily.com
SERVER_NAME=doggodaiily.com
CORS_ORIGINS=https://www.doggodaiily.com,https://doggodaiily.com

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console
GOOGLE_REDIRECT_URI=https://www.doggodaiily.com/api/auth/google/callback

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-not-regular-password
MAIL_DEFAULT_SENDER=noreply@doggodaiily.com
MAIL_SUPPRESS_SEND=False

# Admin Configuration
ADMIN_EMAIL=admin@doggodaiily.com
ADMIN_NOTIFICATION_EMAIL=admin@doggodaiily.com

# Security Configuration
FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
BCRYPT_LOG_ROUNDS=14
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCKOUT_DURATION=60
PREFERRED_URL_SCHEME=https

# File Upload Configuration
UPLOAD_FOLDER=/var/www/doggodaily/uploads
MAX_CONTENT_LENGTH=52428800

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/doggodaily/app.log

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
# For Redis: RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=1000/day,100/hour

# Feature Flags
FEATURE_2FA_REQUIRED_FOR_ADMIN=True
FEATURE_EMAIL_VERIFICATION=True
FEATURE_GEOLOCATION_TRACKING=True
FEATURE_DEVICE_TRACKING=True

# Security Alerts
SECURITY_ALERT_EMAIL=security@doggodaiily.com
FAILED_LOGIN_ALERT_THRESHOLD=10
SUSPICIOUS_ACTIVITY_ALERT=True

# JWT Configuration
JWT_ACCESS_EXPIRES_HOURS=1
JWT_REFRESH_EXPIRES_DAYS=30

# Performance Settings
MAX_CONCURRENT_SESSIONS=5
PASSWORD_HISTORY_COUNT=5
